{
  "name": "minapp-vscode",
  "displayName": "minapp",
  "description": "A extension for minapp(微信小程序)",
  "version": "0.0.1",
  "publisher": "qiu8310",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "clear": "remove-all dist",
    "vscode:prepublish": "node src/dev/script.js prod && npm run build",
    "build": "npm run clear && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run build && node ./node_modules/vscode/bin/test"
  },
  "license": "MIT",
  "author": "Mora <qiuzhongleiabc@126.com> (https://github.com/qiu8310)",
  "bugs": "https://github.com/qiu8310/minapp/issues",
  "homepage": "https://github.com/qiu8310/minapp/tree/master/packages/minapp-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/qiu8310/minapp/tree/master/packages/minapp-vscode"
  },
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:wxml"
  ],
  "main": "./dist/extension",
  "contributes": {
    "languages": [
      {
        "id": "wxml",
        "extensions": [
          ".wxml"
        ],
        "configuration": "./res/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wxml",
        "scopeName": "text.html.wxml",
        "path": "./res/wxml.tmLanguage.json",
        "embeddedLanguages": {
          "text.html": "html",
          "source.js": "js"
        }
      }
    ]
  },
  "dependencies": {
    "@minapp/common": "^0.0.2",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "mora-scripts": "^1.6.22",
    "@minapp/generator": "^0.0.2",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  }
}
