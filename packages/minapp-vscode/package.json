{
  "name": "minapp-vscode",
  "displayName": "minapp",
  "description": "A extension for minapp(微信小程序)",
  "version": "0.0.1",
  "publisher": "qiu8310",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run build && node ./node_modules/vscode/bin/test"
  },
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.sayHello"
  ],
  "main": "./dist/extension",
  "contributes": {
    "themes": [
      {
        "label": "Dark+ for wxml",
        "uiTheme": "vs-dark",
        "path": "./res/theme.json"
      }
    ],
    "languages": [
      {
        "id": "wxml",
        "extensions": [
          ".wxml"
        ],
        "configuration": "./res/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wxml",
        "scopeName": "text.html.wxml",
        "path": "./res/wxml.tmLanguage.json",
        "embeddedLanguages": {
          "text.html": "html",
          "source.css": "css",
          "source.js": "js"
        }
      }
    ],
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "Hello World"
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "tslib": "^1.9.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  }
}
